{
  "dataset_reader": {
    "type": "ontology_matcher",
    "token_only_indexer": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "/net/nfs.corp/s2-research/scigraph/data/ontoemma/training/ontoemma.context.train",
  "validation_data_path": "/net/nfs.corp/s2-research/scigraph/data/ontoemma/training/ontoemma.context.dev",
  "model": {
    "type": "ontoemmaNN",
    "definition_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "/net/nfs.corp/s2-research/scigraph/data/ontoemma/embeddings/weights100.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "definition_encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2,
      "bidirectional": true
    },
    "siamese_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": 100,
      "activations": "relu",
      "dropout": 0.2
    },
    "decision_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [200, 1],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*encoder.*module.*weight.*", {"type": "orthogonal"}]
     ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [
                    ["s_ent_def", "num_tokens"],
                    ["t_ent_def", "num_tokens"]
    ],
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 50,
    "patience": 10,
    "validation_metric": "+f1_score",
    "cuda_device": -1
  }
}